<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jzj.base.web.mapper.MtLogMapper">

    <resultMap type="com.jzj.base.web.pojo.entity.MtLog" id="MtLogResult">
        <result property="id" column="id"/>
        <result property="mobile" column="mobile"/>
        <result property="logContent" column="log_content"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateBy" column="update_by"/>
    </resultMap>

    <sql id="selectMtLogVo">
        select id,
               mobile,
               log_content,
               status,
               create_time,
               create_by,
               update_time,
               update_by
        from mt_log
    </sql>

    <select id="selectMtLogList" parameterType="com.jzj.base.web.pojo.entity.MtLog" resultMap="MtLogResult">
        <include refid="selectMtLogVo"/>
        <where>
            <if test="mobile != null ">and mobile = #{mobile}</if>
            <if test="status != null ">and status = #{status}</if>
        </where>
        ORDER BY create_time DESC
    </select>
</mapper>